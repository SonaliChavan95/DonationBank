<div class="container col-lg-4 my-5">
  <h1 class="page_title">Login</h1>
  {{#if errors}}
    <div class="validation-errors">
      <ul class='error-list'>
        <p class="error-header">Your submission has {{errors.length}} error(s)!</p>
        {{#each errors as |error|}}
          <li>{{error}}</li>
        {{/each}}
      </ul>
    </div>
  {{/if}}
  <form id="login-form" method="post" action="/auth/login">
    <div class="form-group">
      <label for="email">Email:</label>
      <input type="email" class="form-control" id="email" placeholder="Enter email" name="email" required autofocus>
    </div>
    <div class="form-group">
      <label for="pwd">Password:</label>
      <input type="password" class="form-control" id="pwd" placeholder="Enter password" required name="password">
    </div>
    <div class="form-group">
      <a class="text-primary" href="/auth/signup?uType=Donor">Sign up as Donor?</a>&nbsp; &nbsp;<a class="text-primary"
        href="/auth/signup?uType=Recipient">Sign up as Recipient?</a>
    </div>
    <button type="submit" class="btn btn-success">Submit</button>
  </form>
</div>