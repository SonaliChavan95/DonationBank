<div class="container col-md-6 my-5">
  <h1 class="page_title">Signup</h1>
  {{#if errors}}
    <div class="validation-errors">
      <ul class='error-list'>
        <p class="error-header">Your submission has {{errors.length}} error(s)!</p>
        {{#each errors as |error|}}
          <li>{{error}}</li>
        {{/each}}
      </ul>
    </div>
  {{/if}}
  <form id="signup_form" action="/auth/register" method="POST"
    oninput='password2.setCustomValidity(password2.value != password.value ? "Passwords do not match." : "")'>
    <div class="form-row">
      <div class="form-group col-md-6">
        <label for="firstname">First Name</label>
        <input type="text" class="form-control" id="firstname" name="firstname" value="{{newUser.firstname}}" autofocus
          required>
      </div>
      <div class="form-group col-md-6">
        <label for="lastname">Last Name</label>
        <input type="text" class="form-control" id="lastname" name="lastname" value="{{newUser.lastname}}" required>
      </div>
    </div>
    <div class="form-group">
      <label for="inputEmail">Email</label>
      <input type="email" class="form-control" id="inputEmail" name="email" value="{{newUser.email}}" required>
    </div>
    <div class="form-row">
      <div class="form-group col-md-6">
        <label for="inputRole">Type</label>
        {{#each roles}}
          {{#if (equal name ../uType)}}
            <input type="hidden" class="form-control" id="inputRole" name="role_id" required value={{_id}}>
            <label for="inputType" class="hide">Type</label>
            <input type="text" class="form-control" id="inputType" name="role" readonly value={{name}}>
          {{/if}}
        {{/each}}
      </div>
      <div class="form-group col-md-6">
        <label for="inputGender">Gender</label>
        <select id="inputGender" class="form-control" name="gender" value="{{newUser.gender}}" required>
          <option {{optionSelected 'Male' newUser.gender}}>Male</option>
          <option {{optionSelected 'Female' newUser.gender}}>Female</option>
          <option {{optionSelected 'Other' newUser.gender}}>Other</option>
        </select>
      </div>
    </div>
    <div class="form-group">
      <label for="inputPassword">Password</label>
      <input type="password" class="form-control" id="inputPassword" name="password" required>
    </div>
    <div class="form-group">
      <label for="inputPassword2">Confirm Password</label>
      <input type="password" class="form-control" id="inputPassword2" name="password2">
    </div>
    <button type="submit" class="btn btn-outline-success">Sign Up</button>
    <a class="text-primary" href="/auth/login">Sign in?</a>
  </form>
</div>