<div id="donation">
  <div class="container text-center">
    <div class="row">
      <div class="col-md-6">
        <h1>{{donation.name}}</h1>
        <div class="donation-details">
          <p>Quantity Available: {{donation.quantity}} </p>
          <p>Description: {{donation.description}}</p>
          <p>Region: {{donation.region}}</p>
          <p>Zipcode: {{donation.zipcode}}</p>
          <p>Donated On: {{donation.created_on}}</p>
          <a class="btn btn-success" href="/donations/{{donation._id}}/edit">Edit</a>
          <a class="btn btn-danger" href="/donations/{{donation._id}}/delete">Delete</a>
        </div>
      </div>
      <div class="col-md-6">
        <img src="https://qvc.scene7.com/is/image/QVC/e/86/e353286.001?$aempdzoom$" width="70%" alt="">
      </div>
    </div>
  </div>
</div>
