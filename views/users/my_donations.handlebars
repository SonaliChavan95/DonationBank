<div class="container-fluid">
  {{#if myDonations }}
    <div class="row row-cols-4 recent-donations">
      {{>donation_listing donations=myDonations}}
    </div>
  {{else}}
    <h2 align="center">You have not donated anything yet.</h2>
    <p align="center">
      <br/>
      <a href="/donations/new" class="btn btn-outline-success">Click here to donate goods</a>
    </p>
  {{/if}}
</div>
